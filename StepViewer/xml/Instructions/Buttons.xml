<!-- Here is an example of adding a small button without any caption.  -->
<buttonmenu  Caption="MyButton2" ToolBar="Tools" Page="Viewer" Type="2"  Mode="ADD"/>

<!-- Here is an example of adding a small button without an icon and without a caption.  -->
<buttonmenu  Caption="MyButton3" ToolBar="Tools" Page="Viewer" Type="3"  Mode="ADD"/>

